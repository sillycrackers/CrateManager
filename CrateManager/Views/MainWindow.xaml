<Window x:Class="CrateManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrateManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid Background="#081131">
        <StackPanel>
            <TextBlock Text="Crate Manager" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Style="{StaticResource TextOnDark}" FontSize="40" Margin="0,10,0,20"/>
            <TextBlock Text="Crate 1" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Style="{StaticResource TextOnDark}" FontSize="20"/>
            <ListBox x:Name="listBox_Items" ItemsSource="{Binding Name}" Height="200" Width="200" Margin="0,5,0,5" Style="{StaticResource ListBoxItemStyle}"/>
        </StackPanel>
    </Grid>


</Window>
