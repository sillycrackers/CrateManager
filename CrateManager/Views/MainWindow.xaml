<Window x:Class="CrateManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrateManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600"
        >

    <StackPanel>
        <TextBlock Text="Crate Manager" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Foreground="WhiteSmoke" FontSize="40" Margin="0,10,0,20"/>
        
        <StackPanel Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                
                <StackPanel Grid.Column="1">
                    <TextBlock  Text="Crate" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Foreground="WhiteSmoke" FontSize="20"/>
                    <Button Height="30" Content="Hello"/>
                    <ListView   ItemContainerStyle="{StaticResource ListViewItemStyle}" 
                                x:Name="listView_Items" ItemsSource="{Binding Items}" Height="200" 
                                Width="200" Margin="0,5,0,5" Background="#011C40" BorderBrush="DarkGray">

                        <ListView.View>
                            <GridView>
                                
                                <GridViewColumn Header="Item:" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Quantity:" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Quantity}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                

                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>

                <DockPanel>
                    <Border CornerRadius="5" Background="#011C40" BorderBrush="DarkGray" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Height="125">
                            <TextBlock FontSize="16" Margin="0,10,0,10" HorizontalAlignment="Center" Text="New Item Entry:" Foreground="WhiteSmoke"/>
                            <TextBox HorizontalAlignment="Center" x:Name="TextBoxNewItem" Width="150" Margin="10,0,10,0"/>
                            <Button x:Name="ButtonNewItemEntry" Width="100" Content="Enter" Height="20" Margin="0,10,0,10" Click="ButtonNewItemEntry_Click" Padding="0,0,0,2" />
                        </StackPanel>
                    </Border>
                </DockPanel>
                
                

            </Grid>
           
        </StackPanel>
        <Button Content="Open Crate Widnow" Height="30" Width="150" Margin="0,10,0,0" Click="Button_Click"/>
    </StackPanel>


</Window>
