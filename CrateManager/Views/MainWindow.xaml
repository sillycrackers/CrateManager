<Window x:Class="CrateManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrateManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" Background="#00010D"
        >

    <StackPanel>
        <TextBlock Text="Crate Manager" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Style="{StaticResource TextOnDark}" FontSize="40" Margin="0,10,0,20"/>
        
        <StackPanel Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Crate 1" VerticalAlignment="Center" HorizontalAlignment="Center"
                               Style="{StaticResource TextOnDark}" FontSize="20"/>
                    <ListView x:Name="listView_Items" ItemsSource="{Binding Items}" Height="200" 
                             Width="200" Margin="0,5,0,5" Style="{StaticResource ListBoxItemStyle}">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.View>

                            <GridView ColumnHeaderContainerStyle="{StaticResource GridHeader}">
 
                                <GridViewColumn Width="100" DisplayMemberBinding="{Binding Name}">
                                    <GridViewColumnHeader Content="Item Name" Background="DarkSlateGray"/>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="100" DisplayMemberBinding="{Binding Quantity}">
                                    <GridViewColumnHeader Content="Quantity" Background="DarkSlateGray"/>
                                </GridViewColumn>
                                
                            </GridView>
                            
                        </ListView.View>
                    </ListView>
                </StackPanel>

                <StackPanel Background="#011C40" Margin="30,0,30,0" Height="125">
                    <TextBlock FontSize="16" Margin="0,10,0,10" HorizontalAlignment="Center" Text="New Item Entry:" Style="{StaticResource TextOnDark}"/>
                    <TextBox HorizontalAlignment="Center" x:Name="TextBoxNewItem" Width="150"/>
                    <Button x:Name="ButtonNewItemEntry" Width="100" Content="Enter" Margin="0,10,0,10" Click="ButtonNewItemEntry_Click" />
                </StackPanel>
                
            </Grid> 
        </StackPanel>

    </StackPanel>


</Window>
